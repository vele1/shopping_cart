<h1>Login</h1>
<p>Please enter your username(email address) and password to login.</p>
<%form_tag(:action => "login") do %>
   <table>
     <tr>
       <td>Username</td>
       <td><%= text_field "user", "username" %></td>
     </tr>
     <tr>
       <td>Password</td>
       <td><%= password_field "user", "password" %></td>
     </tr>
     <tr>
       <td></td>
       <td>
         <%= submit_tag("Login") %>
         <input type="reset" value="Clear"/>
       </td>
     </tr>
     <tr>
       <td></td>
       <td><%= link_to "Register", :action => "register" %></td>
     </tr>
   </table>
<% end %>
